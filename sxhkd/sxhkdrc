# wm independent hotkeys

# terminal emulator
super + Return
	alacritty

super + shift + Return
  WINIT_X11_SCALE_FACTOR=1.5 alacritty -vv

# program launcher
super + {@space,d}
  sleep 0 && rofi -show drun

# emoji picker
super + e
  rofi -show emoji -modi emoji

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,alt + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked -n newest.!automatic

# send the newest marked node to the current desktop
super + shift + y
	bspc node newest.marked -d

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# set the window state
super + {t,shift + t,shift + f,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {_,shift +}v
	bspc desktop -f {next,prev}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1,2,3,4,5,6,7,8,9,0}
	bspc {desktop -f,node -d} '{term,api,webfront,config,five,web,chat,win,nine,ten}'

# scratchterm
super + u
  ~/.config/bspwm/scratchterm

# even ratio
super + apostrophe
  bspc node @/ --balance

# set the ratio
super + alt + shift + 3
	bspc config split_ratio 0.33 && notify-send "|  |     | third"
super + alt + shift + 4
	bspc config split_ratio 0.25 && notify-send "| |      | quarter"
super + alt + shift + 5
	bspc config split_ratio 0.5  && notify-send "|   |   | half"
super + alt + shift + 6
	bspc config split_ratio 0.66 && notify-send "|     |  | two thirds"
super + alt + shift + 7
	bspc config split_ratio 0.75 && notify-send "|      | | three quarters"

# set the width
super + alt + {2,3,4,5,6,7}
  ~/.config/bspwm/width.sh {2,3,4,12 5,3 2,4 3}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {2,3,4,5,6,7}
	bspc node -o 0.{25,33,25,5,66,75}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Set wallpaper
super + shift + w
  ~/.config/bspwm/setwall.sh

# Network menu
super + n
  notify-send "set this up if you keep using it???"

# Bluetooth menu
super + ctrl + b
  ~/.config/polybar/scripts/btmenu.sh

# Audio menu
super + ctrl + a
  ~/.config/polybar/scripts/pamenu.sh

# Pass otp
ctrl + alt + t
  ~/.config/bspwm/otpmenu.sh

# screenlayout
super + shift + m
  ~/.config/bspwm/monitor_detect.sh
  
# Lock
ctrl + alt + l
  i3lock-fancy-multimonitor -p -n

# Screenshots
super + {alt,shift,ctrl} + p
  maim {~/Pictures/screens/Screenshot_$(date +%s).png, -s | xclip -selection clipboard -t image/png, -s ~/Pictures/screens/Screenshot_$(date +%s).png}

# Color Picker
super + alt + c
  xcolor | xclip -selection clipboard

# Share prices
super + alt + s
  /home/nicky/apps/ticker.sh/notify-shares

# on screen ruler
super + r
  eruler

# Launcher
super + o ; {f,s,z,t}
  {firefox-developer-edition,slack,zoom,teams}

# Volume
XF86AudioLowerVolume
	/home/nicky/.config/bspwm/volume.sh -2

XF86AudioRaiseVolume
	/home/nicky/.config/bspwm/volume.sh +2

XF86AudioMute
	ponymix toggle

# brightness
# xbacklight from community/acpilight
XF86MonBrightnessUp
  sudo xbacklight -inc 10

XF86MonBrightnessDown
  sudo xbacklight -dec 10

# clipboard
ctrl + alt + v
  sleep 0 && roficlip -font "hasklig 10"
